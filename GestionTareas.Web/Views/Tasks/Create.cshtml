@model TaskEntityDTO

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Añadir Nueva Tarea</title>

    <!-- Enlace al CDN de Bootstrap 5 completo y sus iconos -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/css/sIndex.css">

</head>

<body>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card task-form-card border-0">
                <div class="card-body p-4 p-md-5">
                    <h1 class="card-title text-primary fw-bold mb-4">
                        <i class="bi bi-journal-plus me-2"></i> Crear Nueva Tarea
                    </h1>
                    <p class="text-muted mb-4">Ingresa todos los detalles de la nueva tarea que necesitas organizar.</p>

                    <!-- Formulario de Tarea -->
                    <form asp-action="Create" method="POST">

                        <!-- Título de la Tarea -->
                        <div class="form-floating mb-3">
                            <input asp-for="Title" type="text" class="form-control" id="titleInput"
                                   placeholder="@Html.DisplayFor(t => t.Title)" required/>
                            <label asp-for="Title">Título de la Tarea</label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Fecha de Entrega -->
                        <div class="form-floating mb-3">
                            <input asp-for="Finished" type="datetime-local" class="form-control" id="dateInput"
                                   placeholder="@Html.DisplayFor(t => t.Finished)"
                                   required/>
                            <label asp-for="Finished">Fecha de Entrega</label>
                            <span asp-validation-for="Finished" class="text-danger"></span>
                        </div>

                        <!-- Descripción de la Tarea -->
                        <div class="form-floating mb-4">
                            <textarea asp-for="Description" class="form-control" placeholder="@Html.DisplayFor(t => t.Description)"
                                      id="descriptionTextarea" style="height: 100px"></textarea>
                            <label asp-for="Description">Descripción de la Tarea (Opcional)</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                        <!-- Botones de Acción -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">

                            <!-- Botón de Regreso/Cancelar -->
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg"
                               role="button">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                            </a>

                            <!-- Botón de Enviar Formulario -->
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-lg me-1"></i> Guardar
                            </button>
                        </div>
                    </form>
                    <!-- Fin del Formulario -->

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script de Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>
